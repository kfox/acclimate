{
  "name": "acclimate",
  "version": "0.1.0",
  "description": "API-Curious Command-Line Interface Making API Traversal Easy",
  "main": "./lib/acclimate.js",
  "scripts": {
    "check": "ncu",
    "coverage": "nyc report -r=html && open coverage/index.html",
    "debug": "node --inspect bin/acclimate.js",
    "lint": "standard -v | snazzy",
    "prepublish": "npm test",
    "pretest": "npm run lint --silent",
    "test": "nyc ava && nyc report --reporter=text-lcov | coveralls",
    "watch": "ava --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kfox/acclimate.git"
  },
  "author": "Kelly Fox <kelly@bumfuddled.com>",
  "keywords": [
    "api",
    "cli",
    "command",
    "prompt",
    "rest"
  ],
  "files": [
    "bin",
    "examples",
    "lib"
  ],
  "license": "MIT",
  "preferGlobal": true,
  "bin": {
    "acclimate": "./bin/acclimate.js",
    "acc": "./bin/acclimate.js"
  },
  "bugs": {
    "url": "https://github.com/kfox/acclimate/issues"
  },
  "homepage": "https://github.com/kfox/acclimate#readme",
  "dependencies": {
    "cardinal": "^1.0.0",
    "chalk": "^1.1.3",
    "js-beautify": "^1.6.9",
    "node-jq": "^0.5.0",
    "strip-ansi": "^3.0.1",
    "unirest": "^0.5.1",
    "vorpal": "^1.11.4",
    "vorpal-autocomplete-fs": "0.0.3",
    "vorpal-grep": "^0.2.0",
    "vorpal-less": "0.0.13",
    "vorpal-repl": "^1.1.8",
    "vorpal-use": "^1.0.1"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "coveralls": "^2.11.16",
    "eslint": "^3.15.0",
    "nock": "^9.0.6",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0"
  },
  "engines": {
    "node": ">=6.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "nyc": {
    "all": true,
    "branches": 99,
    "cache": true,
    "check-coverage": false,
    "exclude": [
      "coverage",
      "node_modules",
      "test"
    ],
    "functions": 99,
    "lines": 99,
    "statements": 99
  },
  "optionalDependencies": {
    "npm-check-updates": "^2.10.2"
  }
}
